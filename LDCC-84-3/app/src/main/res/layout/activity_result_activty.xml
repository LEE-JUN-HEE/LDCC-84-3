<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/seveneleven1"
    android:orientation="vertical"
    tools:context="com.example.juni.ldcc_84_3.ResultActivty">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/sevenbg"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0px"
            android:layout_height="80dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/resulttext"
            android:layout_width="0px"
            android:layout_height="82dp"
            android:layout_weight="2"
            android:background="@drawable/resultbg"
            android:gravity="center"
            android:text="Your location"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="25px"
            android:textStyle="bold"
            app:srcCompat="@drawable/seven_eleven_small" />

        <TextView
            android:layout_width="0px"
            android:layout_height="80dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/resultad"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1.99"
        android:padding="10dp" />

    <include
        android:id="@+id/item1"
        layout="@layout/final_result"></include>

    <include
        android:id="@+id/item2"
        layout="@layout/final_result"></include>

    <include layout="@layout/final_result" android:id = "@+id/item3"></include>
